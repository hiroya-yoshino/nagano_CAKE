<div class="container">
  <div class="row">
    <p class="h5 text-left bg-light text-dark px-3 my-3 ml-5">
      <%= @customer.full_name %>さんの会員情報編集
    </p>
  </div>
  <%= form_with model: @customer, url: admin_customer_path(@customer.id), method: :patch do |f| %>
  <div class="row">
    <div class="col-md-3 mx-5 mb-3">
      会員ID
    </div>
    <div class="col-md-7 mb-3">
      <%= @customer.id %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-3 mx-5 mb-3">
      氏名
    </div>
    <div class="col-md-7 mb-3">
      <%= f.text_field :last_name, placeholder:"last_name", class:"mr-3" %>
      <%= f.text_field :first_name, placeholder:"first_name" %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-3 mx-5 mb-3">
      フリガナ
    </div>
    <div class="col-md-7 mb-3">
      <%= f.text_field :last_name_kana, placeholder:"last_name_kana", class:"mr-3" %>
      <%= f.text_field :first_name_kana, placeholder:"first_name_kana" %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-3 mx-5 mb-3">
      郵便番号
    </div>
    <div class="col-md-7 mb-3">
    <%= f.text_field :postal_code, placeholder:"postal_code" %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-3 mx-5 mb-3">
      住所
    </div>
    <div class="col-md-7 mb-3">
      <%= f.text_field :address, placeholder:"address" %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-3 mx-5 mb-3">
      電話番号
    </div>
    <div class="col-md-7 mb-3">
      <%= f.text_field :telephone_number, placeholder:"telephone_number" %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-3 mx-5 mb-3">
      メールアドレス
    </div>
    <div class="col-md-7 mb-3">
      <%= f.text_field :email, placeholder:"email" %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-3 mx-5 mb-3">
      会員ステータス
    </div>
    <div class="col-md-7 mb-3">
      <%= f.radio_button :is_active, 'false' %>
      <%= f.label :is_active, '有効', value: false, class:"mr-3" %>
      <%= f.radio_button :is_active, 'true' %>
      <%= f.label :is_active, '退会', value: true %>
    </div>
  </div>
  <div class="col-2 mx-auto">
    <div class="row form-group">
      <%= f.submit '変更を保存', class:"btn btn-success btn-lg" %>
    </div>
  </div>
  <% end %>
</div>
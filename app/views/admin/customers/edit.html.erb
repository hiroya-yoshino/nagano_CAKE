<div class="container">
  <% form_with model: @customer, url: admin_customer_path(@customer.id), method: :patch do |f| %>
  <div class="row">
    <% f.last_name %><% f.first_name %>さんの会員情報編集
  </div>
  <div class="row">
    会員ID
    <% f.id %>
  </div>
  <div class="row">
    氏名
    <%= f.text_field :last_name, placeholder:"last_name" %>
    <%= f.text_field :first_name, placeholder:"first_name" %>
  </div>
  <div class="row">
    フリガナ
    <%= f.text_field :last_name_kana, placeholder:"last_name_kana" %>
    <%= f.text_field :first_name_kana, placeholder:"first_name_kana" %>
  </div>
  <div class="row">
    郵便番号
    <%= f.text_field :postal_code, placeholder:"postal_code" %>
  </div>
  <div class="row">
    住所
    <%= f.text_field :address, placeholder:"address" %>
  </div>
  <div class="row">
    電話番号
    <%= f.text_field :telephone_number, placeholder:"telephone_number" %>
  </div>
  <div class="row">
    メールアドレス
    <%= f.text_field :email, placeholder:"email" %>
  </div>
  <div class="row">
    会員ステータス
    <%= f.radio_button :is_active, 'true' %>
    <%= f.label :is_active, '有効', value: true %>
    <%= f.radio_button :is_active, 'false' %>
    <%= f.label :is_active, '退会', value: false %>
  </div>
  <div class="row">
    <%= f.submit '変更を保存', class:"btn btn-success" %>
  </div>
  <% end %>
</div>
<div class="container">
  <div class="row">
      <p class="h5 text-left bg-light text-dark px-3 my-3 ml-5">商品詳細</p>
  </div>
  <div class="row mt-4">
    <div class="col-md-5 col-lg-4 pl-5">
      <%= image_tag @item.get_image(200,150) %>
    </div>

    <div class="col-md-7 col-lg-6">
      <div class="row">
        <div class="col-md-4 col-lg-4">
          <p>商品名</p>
        </div>
        <div class="col-md-8 col-lg-7">
          <%= @item.name %>
        </div>
      </div>
      <div class="row">
        <div class="col-md-4 col-lg-4">
          <p>商品説明</p>
        </div>
        <div class="col-md-8 col-lg-7">
          <%= @item.introduction %>
        </div>
      </div>
      <div class="row">
        <div class="col-md-4 col-lg-4">
          <p>ジャンル</p>
        </div>
        <div class="col-md-8 col-lg-7">
          <%= @item.genre.name %>
        </div>
      </div>
      <div class="row">
        <div class="col-md-5 col-lg-4">
          <div class="mb-0">税込価格</div>
          <p>(税抜価格)</p>
        </div>
        <div class="col-md-8 col-lg-7 pt-2">
          <strong>
          <%= @item..with_tax_price.to_s(:delimited) %>
          (<%= @item.price.to_s(:delimited) %>)
          円
          </strong>
        </div>
      </div>
      <div class="row">
        <div class="col-md-5 col-lg-4">
          <p>販売ステータス</p>
        </div>
        <div class="col-md-7 col-lg-7">
          <% if @item.is_active %>
            <strong class="text-success">販売中</strong>
          <% else %>
            <strong>販売停止中</strong>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <div class="col-2 mx-auto mt-4">
  <div class="row">
    <%= link_to '編集する', edit_admin_item_path(@item.id), class:"btn btn-success btn-lg" %>
  </div>
  </div>
</div>
商品詳細
<div class="container">
  <div class="row">
    <%#= form_with model: @item do |item| %>
    <div class="col-md-3">
      <%= image_tag @item.get_image %>
    </div>

    <div class="col-md-7">
      <div class="row">
        <div class="col-md-3">
          <p>商品名</p>
        </div>
        <div class="col-md-9">
          <%= @item.name %>
        </div>
      </div>
      <div class="row">
        <div class="col-md-3">
          <p>商品説明</p>
        </div>
        <div class="col-md-9">
          <%= @item.introduction %>
        </div>
      </div>
      <div class="row">
        <div class="col-md-3">
          <p>ジャンル</p>
        </div>
        <div class="col-md-9">
          <%= @item.genre.name %>
        </div>
      </div>
      <div class="row">
        <div class="col-md-3">
          <p>税込価格</p>
          <p>（税抜価格）</p>
        </div>
        <div class="col-md-9">
          <%= @item.price*1.1.round %>
          (<%= @item.price %>)
          円
        </div>
      </div>
      <div class="row">
        <div class="col-md-3">
          <p>販売ステータス</p>
        </div>
        <div class="col-md-9">
          <% if @item.is_active %>
            <strong>販売中</strong>
          <% else %>
            <strong>販売停止中</strong>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <%= link_to '編集する', edit_admin_item_path(@item.id), class:"btn btn-success" %>
  </div>
</div>
商品編集
<div class="container">
  <%= form_with model: @item, url: admin_item_path(@item.id), method: :patch do |f| %>
  <div class="row">
    商品画像
    <%= f.file_field :image, accept: "image/*" %>
  </div>
  <div class="row">
    商品名
    <%= f.text_field :name, placeholder:"name" %>
  </div>
  <div class="row">
    商品説明
    <%= f.text_area :introduction, placeholder:"introduction" %>
  </div>
  <div class="row">
    ジャンル
    <%= f.collection_select(:genre_id, @genres, :id, :name) %>
  </div>
  <div class="row">
    税抜価格
    <%= f.text_field :price, placeholder:"price" %>
  </div>
  <div class="row">
    販売ステータス
    <%= f.radio_button :is_active, 'true' %>
    <%= f.label :is_active, '販売中', value: true %>
    <%= f.radio_button :is_active, 'false' %>
    <%= f.label :is_active, '販売停止中', value: false %>
  </div>
  <div class="row">
    <%= f.submit '変更を保存', class:"btn btn-success" %>
  </div>
  <% end %>
</div>
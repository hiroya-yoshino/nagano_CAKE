<div class="container">
  <div class="row">
      <p class="h5 text-left bg-light text-dark px-3 my-3">商品新規登録</p>
  </div>

  <%= form_with model: @item, url: admin_items_path, method: :post do |f| %>
    <div class="row form-group mb-3">
      <div class="col-sm-1 col-lg-3"></div>
      <div class="col-sm-4 col-lg-2 ml-7">商品画像</div>
      <div class="col-sm-7 col-lg-7 mr-auto">
        <%= f.file_field :image, accept: "image/*" %></br>
      </div>
    </div>

    <div class="row form-group mb-3">
      <div class="col-sm-1 col-lg-3"></div>
      <div class="col-sm-4 col-lg-2 ml-7">商品名</div>
      <div class="col-sm-7 col-lg-7 mr-auto">
        <%= f.text_field :name, placeholder: "商品名" %></br>
      </div>
    </div>

    <div class="row form-group mb-3">
    　<div class="col-sm-1 col-lg-3"></div>
      <div class="col-sm-4 col-lg-2 ml-7">商品説明</div>
      <div class="col-sm-7 col-lg-7 mr-auto">
        <%= f.text_area :introduction, placeholder: "ここに説明文を記述します" %></br>
      </div>
    </div>

    <div class="row form-group">
      <div class="col-sm-1 col-lg-3"></div>
      <div class="col-sm-4 col-lg-2 ml-7">ジャンル</div>
      <div class="col-sm-7 col-lg-7 mr-auto">
        <%= f.collection_select(:genre_id, @genres, :id, :name) %></br>
      </div>
    </div>

    <div class="row form-group">
    　<div class="col-sm-1 col-lg-3"></div>
      <div class="col-sm-4 col-lg-2 ml-7">税抜価格</div>
      <div class="col-sm-7 col-lg-7 mr-auto">
        <%= f.text_field :price, placeholder: "1000" %>円</br>
      </div>
    </div>

    <div class="row form-group">
    　<div class="col-sm-1 col-lg-3"></div>
      <div class="col-sm-4 col-lg-2 ml-7">販売ステータス</div>
      <div class="col-sm-7 col-lg-7 mr-auto">
        <%= f.radio_button :is_active, 'true' %>
    　   <%= f.label :is_active, '販売中', value: true %>
    　   <%= f.radio_button :is_active, 'false' %>
        <%= f.label :is_active, '販売停止中', value: false %></br>
        <%= f.submit '新規登録', class:"btn btn-success" %>
      </div>
    </div>




    <% end %>
  </div>
</div>
<h1>ジャンル編集</h1>

<div class="container">
  <div class="row">
    ジャンル名
    <%= form_with model: @genre, url: admin_genre_path, method: :patch do |f| %>
      <%= f.text_field :name, autofocus: true, placeholder:"name" %>
      <%= f.submit '変更を保存', class:"btn btn-success" %>
    <% end %>
  </div>
</div>
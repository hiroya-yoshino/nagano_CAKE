<div class="container">
  <div class="row">
      <p class="h5 text-left bg-light text-dark px-3 my-3 ml-5">ジャンル一覧・追加</p>
  </div>

    <div class="col-11">
      <div class="row">
        <%= form_with model: @genre, url: admin_genres_path, method: :post do |f| %>
    <strong class="small mr-5">ジャンル名</strong>
    <%= f.text_field :name, autocomplete: "name" , placeholder: "ジャンル名", class:"mr-5" %>
      <%= f.submit '新規登録', class:"btn btn-success"%>
  </div>
  <% end %>
</div>
  <div class="row mt-5">
    <div class="col-md-6 col-lg-4">
      <table class="table">
        <thead>
          <tr class="bg-light">
            <th>ジャンル</th>
            <th width="120"></th>
          </tr>
        </thead>
      <% @genres.each do |genre| %>
        <tr>
          <td><p><%= genre.name %></p></td>
          <td><%= link_to "編集する", edit_admin_genre_path(genre.id), class:"btn btn-success btn-sm" %></td>
        </tr>
      <% end %>
    </table>
    </div>
  </div>
</div>

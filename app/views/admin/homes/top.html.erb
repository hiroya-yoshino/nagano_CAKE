<div class="container">
  <div class="row">
    <p class="h5 text-left bg-light text-dark px-3 my-3 ml-5">注文履歴一覧</p>
  </div>
  <div class="row">
    <div class="col-10 mx-auto">
    <table class="table">
      <thead>
        <tr class="bg-light">
          <th>購入日時</th>
          <th>購入者</th>
          <th>注文個数</th>
          <th>注文ステータス</th>
        </tr>
      </thead>
      <% @orders.each do |order| %>
      <tr>
        <td><u><%= link_to order.created_at.to_s(:datetime_jp), admin_order_path(order.id), class:"text-dark" %></u></td>
        <td><p><%= order.name %></p></td>
        <td><p><%= order.order_details.sum(:amount) %></p></td>
        <td><p><%= Order.atatus_i18n[order.atatus] %></p></td>
      </tr>
      <% end %>
      <%= paginate @orders %>
    </table>
    </div>
  </div>
</div>
<div class="container">
  <div class="row">
    注文履歴一覧
  </div>
  <div class="row">
    <table class="table">
      <thead>
        <tr>
          <th>購入日時</th>
          <th>購入者</th>
          <th>注文個数</th>
          <th>注文ステータス</th>
        </tr>
      </thead>
      <% @orders.each do |order| %>
      <tr>
        <td><p><% link_to order.create_at, admin_order_path(order.id) %></p></td>
        <td><p><% order.customer.name %></p></td>
        <td><p><% order.order_detail.amount %></p></td>
        <td><p><% order.status %></p></td>
      </tr>
      <% end %>
      <%= paginate @orders %>
    </table>
  </div>
</div>
<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <header>
    <nav class="navbar navbar-expand-lg navbar-light pt-4 pb-2 border-bottom border-dark">
      <div class="container">
        <a class="navbar-brand border border-dark px-5" href="/"><span>LOGO</span></a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <ul class="navbar-nav ml-auto">
    <% if admin_signed_in? %>
      <li class="nav-item border rounded mr-4">
        <%= link_to admin_items_path, class:"nav-link button text-dark" do %>
          商品一覧
        <% end %>
      </li>
      <li class="nav-item border rounded mr-4">
        <%= link_to admin_customers_path, class:"nav-link button text-dark" do %>
          会員一覧
        <% end %>
      </li>
      <li class="nav-item border rounded mr-4">
        <%= link_to admin_path, class:"nav-link button text-dark" do %>
          注文履歴一覧
        <% end %>
      </li>
      <li class="nav-item border rounded mr-4">
        <%= link_to admin_genres_path, class:"nav-link button text-dark" do %>
          ジャンル一覧
        <% end %>
      </li>
      <li class="nav-item border rounded mr-4">
        <%= link_to destroy_admin_session_path, method: :delete, class:"nav-link button text-dark" do %>
          ログアウト
        <% end %>
      </li>
    <% elsif customer_signed_in? %>
      <li class="nav-item border rounded mr-4">
        <%= link_to destroy_customer_session_path, method: :delete, class:"nav-link button text-dark" do %>
          ログアウト
        <% end %>
      </li>
    <% else %>
    <li class="nav-item border rounded mr-4">
        <%= link_to about_path, class:"nav-link button text-dark" do %>
          About
        <% end %>
      </li>
    <li class="nav-item border rounded mr-4">
        <%= link_to new_customer_registration_path, class:"nav-link button text-dark" do %>
          新規登録
        <% end %>
      </li>
      <li class="nav-item border rounded mr-4">
        <%= link_to new_customer_session_path, class:"nav-link button text-dark" do %>
          ログイン
        <% end %>
      </li>
    <% end %>

    </ul>
    </div>
    </div>
    </nav>
  </header>
  <%= yield %>
  <footer class="mt-5 border-top border-dark">
      <div class="container">
        <div class="row">
          <div class="mx-auto">
            <p> </p>
          </div>
        </div>
      </div>
    </footer>
</body>
</html>

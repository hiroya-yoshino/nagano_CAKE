<div class="container">
  <div class="row mt-3 mx-5">
    <p class="h5 text-left bg-light text-dark px-3 ml-5">注文情報入力</p>
  </div>

  <%= form_with model: @order, url: orders_confirm_path, method: :post do |f| %>
  <div class="row">
    <strong class="h5 font-weight-bold">支払方法</strong>
  </div>
  <div class="row">
    <%= f.radio_button :payment_method, '0', class: "ml-3 h5" %>
    <%= f.label :payment_method, 'クレジットカード', value: 0, class: "ml-2 h5" %>
  </div>
  <div class="row">
    <%= f.radio_button :payment_method, '1', class: "ml-3 h5" %>
    <%= f.label :payment_method, '銀行振込', value: 1, class: "ml-2 h5" %>
  </div>
  <div class="row">
    <strong class="h5 font-weight-bold">お届け先</strong>
  </div>
  <div class="row">
    <%= f.radio_button :payment_method, '1', class: "ml-3 h5" %>
    <%= f.label :payment_method, '銀行振込', value: 1, class: "ml-2 h5" %>
  </div>
  <% end %>
</div>
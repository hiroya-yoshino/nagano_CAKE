<div class="container">
  <div class="row">
    <p class="h5 text-left bg-light text-dark px-3 my-3 ml-5">配送先登録/一覧</p>
  </div>

  <%= form_with model: @address, url: addresses_path, method: :post do |f| %>

  <div class="row form-group">
    <div class="col-sm-3 col-lg-3">郵便番号(ハイフンなし)</div>
    <div class="col-sm-7 col-lg-7">
      <%= f.text_field :postal_code, autofocus: true, placeholder: "0000000" %>
    </div>
  </div>

  <div class="row form-group">
    <div class="col-sm-3 col-lg-3">住所</div>
    <div class="col-sm-7 col-lg-7 ">
      <%= f.text_field :address, style: "width:100%", placeholder: "東京都渋谷区代々木神園町0−0" %>
    </div>
  </div>

  <div class="row form-group">
    <div class="col-sm-3 col-lg-3">宛名</div>
    <div class="col-sm-7 col-lg-7 ">
      <%= f.text_field :name , placeholder: "令和道子" %>
    </div>
    <div class="col-sm-1 col-lg-1">
      <%= f.submit '新規登録', class: "btn btn-success" %>
    </div>
  </div>
  <% end %>

  <div class="col-lg-11 mx-auto mt-5">
    <table class="table table-bordered">
      <thead>
        <tr class="bg-light">
          <th>郵便番号</th>
          <th>住所</th>
          <th>宛名</th>
          <th></th>
        </tr>
      </thead>
      <% @addresses.each do |address| %>
      <tr>
        <td width="10%"><p><%= address.postal_code %></p></td>
        <td width="30%"><p><%= address.address %></p></td>
        <td width="15%"><p><%= address.name %></p></td>
        <td width="25% px-0">
          <%= link_to '編集する', edit_address_path(address.id), method: :get, class: "btn btn-success mr-1 py-0" %>
          <%= link_to '削除する', address_path(address.id), method: :delete, class: "btn btn-danger ml-1 py-0" %>
        </td>
      </tr>
      <% end %>
    </table>
  </div>

</div>
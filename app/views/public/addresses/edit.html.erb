<div class="container">
  <div class="row">
    <p class="h5 text-left bg-light text-dark px-3 my-3 ml-5">配送先登録/一覧</p>
  </div>

  <%= form_with model: @address, url: address_path, method: :patch do |f| %>

  <div class="row form-group">
    <div class="col-sm-3 col-lg-3">郵便番号(ハイフンなし)</div>
    <div class="col-sm-7 col-lg-7">
      <%= f.text_field :postal_code, autofocus: true %>
    </div>
  </div>

  <div class="row form-group">
    <div class="col-sm-3 col-lg-3">住所</div>
    <div class="col-sm-7 col-lg-7 ">
      <%= f.text_field :address, style: "width:100%" %>
    </div>
  </div>

  <div class="row form-group">
    <div class="col-sm-3 col-lg-3">宛名</div>
    <div class="col-sm-7 col-lg-7 ">
      <%= f.text_field :name %>
    </div>
    <div class="col-sm-1 col-lg-1">
      <%= f.submit '変更内容を保存', class: "btn btn-success" %>
    </div>
  </div>
  <% end %>
  </div>
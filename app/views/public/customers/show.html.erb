<div class="container">
  <div class="row">
    <p class="h5 text-left bg-light text-dark px-3 my-3 ml-5">マイページ</p>
  </div>

  <div class="row">
    <strong class="mr-5">登録情報</strong>
    <div class="text-center">
      <%= link_to '編集する', customers_information_edit_path, class:"btn btn-success py-0" %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-8">
      <table class="table table-hover table-inverse table-bordered">
    <tr>
　    <th class="bg-light" width="150">氏名</th>
　    <td><%= @customer.last_name %> <%= @customer.first_name %></td>
　  </tr>
　  <tr>
　    <th class="bg-light">カナ</th>
　    <td><%= @customer.last_name_kana %> <%= @customer.first_name_kana %></td>
　  </tr>
　  <tr>
　    <th class="bg-light">郵便番号</th>
　    <td><%= @customer.postal_code %></td>
　  </tr>
　  <tr>
　    <th class="bg-light">住所</th>
　    <td><%= @customer.address %></td>
　  </tr>
　  <tr>
　    <th class="bg-light">電話番号</th>
　    <td><%= @customer.telephone_number %></td>
　  </tr>
　  <tr>
　    <th class="bg-light">メールアドレス</th>
　    <td><%= @customer.email %></td>
　  </tr>
  </table>
    </div>
  </div>

  <div class="row mb-2">
    <strong>配送先</strong>
  </div>

  <div class="row mb-2">
    <strong>注文履歴</strong>
  </div>

</div>